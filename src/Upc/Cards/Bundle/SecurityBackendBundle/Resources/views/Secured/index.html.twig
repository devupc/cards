{% extends 'SecurityBackendBundle::layout.html.twig' %}
{% block css %}
<style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav {
            padding: 9px 0;
        }

        @media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }
    </style>
{% endblock %}
{% block content_header %}
    {% include 'SecurityBackendBundle:Includes:header.html.twig' %}
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3"
                {% include 'SecurityBackendBundle:Includes:menu.html.twig' %}
            </div>
            <div class="span9">
                {% block form %} {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
