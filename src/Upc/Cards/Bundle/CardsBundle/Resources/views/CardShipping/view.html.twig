{% extends 'CardsBundle:Includes:index.html.twig' %}
{% block content %}
<div class="container marketing">
    {% for flashMessage in app.session.flashbag.get('cardShipping') %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ flashMessage }}
        </div>
    {% endfor %}
        <div class="span11">
            <div class="row">
                <div class="span3">
                    <h4><strong>Enviaste A: {{cardShipping.recipientName}} </strong></h4>
                </div>
            </div>
            <div class="row">
                <div class="span2">
                    <img src="{{ app.request.getBasePath }}/{{cardShipping.card.absolutePath}}" alt="">
                </div>
                <div class="span8">      
                    <p>
                        Mensaje: {{cardShipping.message}}
                    </p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
