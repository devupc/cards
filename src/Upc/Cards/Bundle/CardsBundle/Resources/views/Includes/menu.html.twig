<div id="menubar" {% if carousel == true %} class="carousel" {% endif %} >
    <div class="container navbar-wrapper">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="{{ path('cards_homepage_home') }}">Halcon Postales</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">Categorias<strong class="caret"></strong></a>
                            {% include "CardsBundle:Home:categoriesHome.html.twig" %}
                        </li>{% if app.session.get('contact') %}
                        <li><a href="{{ path('cards_homepage_novedades') }}">Novedades</a></li>
                        {% endif %}
                        <!--<li><a href="#comentarios">Comentarios</a></li>-->
                    </ul>
                    <ul class="nav pull-right">
                        {% if not app.session.get('contact') %}
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Registrate <strong class="caret"></strong></a>
                            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                                <form method="post" action="{{ path('cards_conctact_add') }}" accept-charset="UTF-8">
                                    <input type="text" id="contact_firstName" name="contact[firstName]" required="required" maxlength="60" placeholder="Nombres">
                                    <input type="text" id="contact_lastName" name="contact[lastName]" required="required" maxlength="60" placeholder="Apellidos">
                                    <input type="email" id="contact_email" name="contact[email]" required="required" placeholder="Email">
                                    <input type="password" id="contact_password" name="contact[password]" required="required" maxlength="20" placeholder="Contraseña">
                                    <select id="contact_gender" name="contact[gender]" placeholder="Genero"><option value="">---Seleccione---</option><option value="1">Masculino</option><option value="2">Femenino</option><option value="3">Otro</option></select>
                                    <input type="date" id="contact_birthday" name="contact[birthday]" placeholder="Cumpleaños">
                                    <select id="contact_sourceType" name="contact[sourceType]" placeholder="Origen"><option value="">---Seleccione---</option><option value="1">Internet</option><option value="2">Redes Sociales</option><option value="3">Otro</option></select>
                                    <select id="contact_relationType" name="contact[relationType]" placeholder="Tipo"><option value="">---Seleccione---</option><option value="1">Señor</option><option value="2">Señora</option><option value="3">Señorita</option></select>
                                    <input type="date" id="contact_dateAnniversary" name="contact[dateAnniversary]" placeholder="Aniversario">
                                    <input type="text" id="contact_cellphone" name="contact[cellphone]" maxlength="15" placeholder="Celular">
                                    <input type="text" id="contact_phone" name="contact[phone]" maxlength="15" placeholder="Telefono">
                                    <button type="submit" id="contact_save" name="contact[save]" class="btn btn-primary">Registrar</button>
                                </form>
                            </div>
                        </li>
                        {% endif %}
                        <li class="divider-vertical"></li>
                        <li class="dropdown">
                            {% if app.session.get('contact') %}
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">{{ app.session.get('contact').firstName }}<strong class="caret"></strong></a>
                            <ul class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                                <li><a href="{{ path('cards_conctact_logout') }}" >Cerrar sesion</a></li>
                            </ul>
                            {% else %}
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Iniciar Sesión <strong class="caret"></strong></a>
                            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                                <form method="post" action="{{ path('cards_conctact_login')}} " accept-charset="UTF-8">
                                    <input style="margin-bottom: 15px;" type="text" placeholder="Usuario" id="username" name="username" required="required">
                                    <input style="margin-bottom: 15px;" type="password" placeholder="Contraseña" id="password" name="password" required="required">
                                    <input style="float: left; margin-right: 10px;" type="checkbox" name="remember-me" id="remember-me" value="1">
                                    <label class="string optional" for="user_remember_me"> Remember me</label>
                                    <input class="btn btn-primary btn-block" type="submit" id="sign-in" value="Iniciar Sesión">
                                    <!--<label style="text-align:center;margin-top:5px">or</label>
                                    <input class="btn btn-primary btn-block" type="button" id="login-facebook" value="Iniciar con Facebook">
                                    <input class="btn btn-primary btn-block" type="button" id="login-twitter" value="Iniciar con Twitter">-->
                                </form>
                            </div>
                            {% endif %}
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div><!-- /.navbar-inner -->
        </div><!-- /.navbar -->

    </div> <!-- /.container -->
</div><!-- /.navbar-wrapper -->