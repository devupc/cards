{% extends 'SecurityBackendBundle:Secured:index.html.twig' %}
{% block content %}
<ul id="myTab" class="nav nav-tabs">
    <li><a href="{{ path('admin_categorias_add') }}" >Agregar</a></li>
    <li class="active"><a href="{{ path('admin_categorias_list') }}" >Consultar</a></li>
</ul>
<div id="tabContenido" class="tab-content">
    <div class="tab-pane fade active in" id="new">
    <div class="modal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Consultar Categoria</h3>
        </div>
        <div class="modal-body">
        {% for flashMessage in app.session.flashbag.get('categoria') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_errors(form) }}
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.nombrecategoria) }}                    
                </div>
                <div class="span3">
                    {{ form_errors(form.nombrecategoria) }}
                    {{ form_widget(form.nombrecategoria) }}
                </div>
                <div class="span1">
                    {{ form_label(form.idcategoriagrupo) }}                    
                </div>
                <div class="span2">
                    {{ form_errors(form.idcategoriagrupo) }}
                    {{ form_widget(form.idcategoriagrupo) }}
                </div>
            </div>
            <div class="row-fluid">
                <div class="span1">
                    {{ form_label(form.estado) }}
                </div>
                <div class="span3">
                    {{ form_errors(form.estado) }}
                    {{ form_widget(form.estado) }}
                </div>
                <div class="span1">
                    {{ form_widget(form.search) }}
                </div>
            </div>
        {{ form_end(form) }}
            <br>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Nombre</th>
                        <th>Orden</th>
                        <th>Grupo</th>
                        <th>Estado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.nombrecategoria }}</td>
                        <td>{{ item.ordengrupo }}</td>
                        <td>{{ item.idcategoriagrupo }}</td>
                        <td>{{ item.getEstadoDisplay }}</td>
                        <td>
                            <a href="{{ path('admin_categorias_edit', {'pk': item.id}) }}" title="Editar">
                                <i class="icon-edit"></i> </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
            {{ knp_pagination_render(pagination) }}
            </div>
        </div>
            <div class="modal-footer">
                <a href="#" class="btn">Cerrar</a>
            </div>            
        </div>
    </div>
</div>
{% endblock %}
              
